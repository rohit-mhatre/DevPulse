{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node", "jest"],
    "lib": ["ES2020", "DOM"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ]
}